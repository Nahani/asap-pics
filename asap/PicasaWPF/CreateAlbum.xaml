<Window x:Class="PicasaWPF.CreateAlbum"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Creation of an album in ASAP-Pics" Height="238" Width="268">
<Grid Background="LightGreen">
        <Label Content="Name" Height="28" HorizontalAlignment="Left" Margin="28,60,0,0" Name="labelNom" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="94,62,0,0" Name="textName" VerticalAlignment="Top" Width="120" />

        <Button Content="Add" Height="23" HorizontalAlignment="Center" Margin="28,129,142,0" Name="ajout" VerticalAlignment="Top" Width="75" Click="addAlbum" />
        <Button Content="Return" Height="23" HorizontalAlignment="Center" Margin="138,129,32,0" Name="retour" VerticalAlignment="Top" Width="75" Click="return_click" />
    </Grid>
</Window>
